#:kivy 1.10.1

<RootWidget>:
    orientation: "vertical"
    size_hint_y: None
    minimum_size: (750, 150)
    padding: root.width * 0.05, root.height * 0.15
    
    BoxLayout:
        orientation: "horizontal"
        size_hint: 0.5, 1

        Image:
            source: "logo-kivy.png"
            size_hint: None, None
            size: 100, 100

        Image:
            source: "kivy.png"
            size_hint: None, None
            size: 100, 100

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: 30

        Spinner:
            id: spinner
            text: "None"
            size_hint_x: None
            width: 100
            values: ("a", "b", "c", "d", "e")

        TextInput:
            id: folder_path
            size_hint_x: None
            width: 300
            multiline: False

        Button:
            text: "Choose Directory"
            size_hint_x: None
            width: 180

        Button:
            text: "Analyze"
            size_hint_x: None
            width: 100

        # FileChooserListView:
        #     id: folderchooser
